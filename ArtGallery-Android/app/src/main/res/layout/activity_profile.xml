<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDD8CC"
    tools:context=".ProfileActivity">

    <Button
        android:id="@+id/returnButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#AF9B5F"
        android:text="@string/returnButton2"
        android:onClick="returnToLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDD8CC"
            app:srcCompat="@drawable/default_avatar" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="143dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="TextView" />

        <EditText
            android:id="@+id/descriptionText"
            android:layout_width="326dp"
            android:layout_height="95dp"
            android:gravity="center"
            android:text="TextView" />

        <EditText
            android:id="@+id/phoneNumberText"
            android:layout_width="154dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="TextView" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="151dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="TextView" />

        <Button
            android:id="@+id/profileUpdateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#AF9B5F"
            android:gravity="center"
            android:onClick="updateProfile"
            android:text="Update Profile" />

        <Button
            android:id="@+id/artworksButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:onClick="goToArtwork"
            android:text="@string/artworks_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>